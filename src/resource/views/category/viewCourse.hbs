            >{{this.length}}</label></li>
        {{else}}

          <li class="list-group-item"><a
              href="http://localhost:3000/category/view/Design"
            >Design</a>
          </li>
        {{/ifEquals}}
        {{#ifEquals active "Economic"}}
          <li class="list-group-item active"><a
