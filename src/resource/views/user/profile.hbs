<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
<body>
  

<div class="col mt-5">
  <div class="row">
    <div class="col mb-3">
      <div class="d-flex justify-content-end">

      </div>
      <form action="" method="post">
        <div class="card">
          <div class="card-body">
            <div class="e-profile">
              <div class="row">
                <div class="col-12 col-sm-auto mb-3">
                  <div class="mx-auto" style="width: 140px;">
                    <div class="d-flex justify-content-center align-items-center rounded"
                      style="height: 140px; background-color: rgb(233, 236, 239);">
                      <span style="color: rgb(166, 168, 170); font: bold 8pt Arial;">
                        <img src="/video/image/{{data.image}}" alt="" style="height: 140px; width: 140px;">
                      </span>
                    </div>
                  </div>
                </div>
                <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                  <div class="text-center text-sm-left mb-2 mb-sm-0">
                    <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">{{data.fullname}}</h4>
                    <p class="mb-0">@{{data.username}}</p>
                    
                  </div>
                  <div class="text-center text-sm-right">
                    <span class="badge badge-danger">{{data.role}}</span>
                    <div class="text-muted"><small>Joined {{day_joined}}</small></div>
                  </div>
                </div>
              </div>
              <ul class="nav nav-tabs">
                <li class="nav-item"><a href="" class="active nav-link">Profile</a></li>
              </ul>
              <div class="tab-content pt-3">
                <div class="tab-pane active">
                  <form class="form" novalidate="">
                    <div class="row">
                      <div class="col">
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Full Name</label>
                              <input class="form-control" type="text" name="fullname" placeholder="Ex: John Smith"
                                value="{{data.fullname}}"  id="name">
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-group">
                              <label>Username</label>
                              <input class="form-control" type="text" name="username" placeholder="Ex: johnny.s"
                                value="{{data.username}}" readonly>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Phone</label>
                              <input class="form-control" type="text" name="phone" placeholder="Ex: 0707570549"
                                value="{{data.phone}}"  id="phone">
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-group">
                              <label>Gender</label>
                              <select class="custom-select" id="gender2" name="gender">
                                {{#if data.gender}}
                                {{#ifEquals data.gender "Male"}}
                                <option selected value="Male">{{data.gender}}</option>
                                <option value="Female">Female</option>

                                {{else}}
                                <option selected value="Female">{{data.gender}}</option>
                                <option value="Male">Male</option>
                                {{/ifEquals}}
                                {{else}}
                                <option selected value="Choose your gender">Choose your gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>

                                {{/if}}

                                {{!-- <option selected>{{data.gender}}</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option> --}}
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Date of Birth</label>
                              <input class="form-control" type="text" placeholder="Ex: 03/06/2022" id="dob"
                                value="{{day_format}}" name="dob"  id="date">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Email</label>
                              <input class="form-control" type="text" placeholder="Ex: user@example.com" name="email"
                                value="{{data.email}}" readonly id="email">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col mb-3">
                            <div class="form-group">
                              <label>About</label>
                              <textarea class="form-control" rows="5" placeholder="Ex: My Bio" name="about"
                                id="description">{{{data.about}}}</textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    {{#if error}}
                    <div class="row">
                      <div class="col d-flex justify-content-end">
                        <div class="alert alert-danger justify-content-center text-center" role="alert"
                          style="width: 100%;">
                          {{this.error}}
                        </div>
                      </div>
                    </div>
                    {{/if}}
                    <div class="row" style="margin-bottom: 30px">
                      <div class="col d-flex justify-content-end" style="justify-content: center !important;">
                        <button class="btn btn-primary" type="submit" >Save Changes</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div> 
              {{#ifEquals data.role 'Lecturer'}}
                <h1 style="margin-top: 20px; color: #F082AC; font-size: 1.5rem; font-weight: bold;" class = "text-muted">Your learning</h1>
             
              <div class="row">
                {{#each courses}}
                <div class="col-lg-3 col-sm-12 col-md-6" style="">
      <div class="card" style="height: 22rem">
        <a href="/course/{{this._id}}">
          <div style="height: 10rem">

            <img src="/video/image/{{this.image}}" class="card-img-top" style="height: 10rem" alt="...">
          </div>
        </a>
        <div class="card-body" style="text-align: center;">
          <div style="">

            <h5 class="card-title" 
              style="text-overflow: ellipsis;overflow: hidden; width: 220px; height: 1.2em; white-space: nowrap; color: #e75e8d; font-weight: bold; width: 100%;">
              {{this.name}}</h5>
            <span style="font-size: 14px; font-weight: 400; opacity: 0.8;" class = "text-muted">{{this.category}}</span>
            <br>
            <li style="list-style: none;color: gray; font-size: 16px">{{this.shortDesc}}</li>
            <li class="list-inline-item" style="font-size: 15px; color: #747D89;">{{this.numberStudentRate}}<i
                class="fa fa-star" style="color: #FFC000;"></i></li>
            <br>
            {{#if this.complete}}
            <div class = "justify-content-center text-center">
              <div style="background-color: #eceb98; width: 100%; color: #3e3e0d;font-weight: 700"
                      class="d-flex justify-content-center text-center">
                      Complete
              </div>
            </div>
            {{else}}
            <div class = "justify-content-center text-center">
              <div style="background-color: #eceb98; width: 100%; color: #3e3e0d;font-weight: 700"
                      class="d-flex justify-content-center text-center">
                      Not complete
              </div>
            </div>
            {{/if}}
            
            
          
          </div>
      
        </div>
      </div>
    </div>
                 {{/each}}
              </div>
              {{/ifEquals}}
            </div>
          </div>
      </form>
    </div>
  </div>



</div>

</div>
</div>
</div>
<script src="https://cdn.tiny.cloud/1/o3spvyeq6r5oshe6dzh63yc88hs5ct8m2gixynrik46shp7r/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
  integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
  $('#dob').datetimepicker({
    timepicker: false,
    format: 'd/m/Y',
  });

  tinymce.init({
    selector: '#description',
    plugins: 'paste image link autolink lists table media',
    menubar: false,
    toolbar: [
      'undo redo | bold italic underline strikethrough | numlist bullist| alignleft aligncenter alignright |forecolor backcolor| table link image media'
    ]
  });

</script>
</body>