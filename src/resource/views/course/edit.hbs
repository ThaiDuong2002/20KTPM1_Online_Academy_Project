<link rel="stylesheet" href="/css/admin.css">
<div class="container" style="margin-top: 100px;margin-bottom:100px ">
  <div class="content-body">
  <!-- row -->
  <div class="container-fluid">
    <div class="row page-titles mx-0">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
          <h4>Edit Course</h4>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Courses Details</h4>
          </div>
          <div class="card-body">
            <form action="/course/edit/{{course._id}}?_method=PUT" method="post" enctype="multipart/form-data">
              <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Course Name</label>
                    <input type="text" class="form-control" name="name" value="{{course.name}}" required>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Category</label>
                    <select class="form-control" name="category">
                      {{#each categories}}
                        {{#each this.subCategories}}
                          <option value="{{this}}-{{../this.category}}" {{#ifEquals ../../course.subCategory this }}
                            selected {{/ifEquals}}>{{this}} ({{../this.category}})</option>
                        {{/each}}
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Short Description</label>
                    <textarea class="form-control" rows="5" name="shortDesc">{{course.shortDesc}}</textarea>
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Full Description</label>
                    <textarea id="full-description" class="form-control" rows="5" name="fullDesc">{{{course.fullDesc}}}</textarea>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Course Price</label>
                    <input type="text" class="form-control" name="price" value="{{course.price}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Lecturer Name</label>
                    <select name="lecturer" class="form-control">
                      {{#each lecturers}}
                        <option value="{{this._id}}" {{#ifEquals ../course.nameLecturer
                          this.fullname}}selected{{/ifEquals}}>{{this.fullname}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Discount</label>
                    <input type="text" class="form-control" name="discount" value="{{course.discount}}">
                  </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12">
                  <div class="form-group fallback w-100">
                    <label class="form-label d-block">Course Image</label>
                    <input type="file" class="dropify" data-default-file="" name="recfile" accept="image/*">
                  </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12">
                  <div class="form-group fallback w-100">
                    <label class="form-label d-block">Complete Status</label>
                    <select name="complete" id="">
                      <option value="true" {{#ifEquals course.complete true }}selected{{/ifEquals}}>Complete</option>
                      <option value="false" {{#ifEquals course.complete false }}selected{{/ifEquals}}>Incomplete
                      </option>
                    </select>
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">  
                      <button type="submit" class="btn btn-primary">Save change</button>
                    <a href="/course/{{course._id}}" class="btn btn-light">Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</div>


<script src="https://cdn.tiny.cloud/1/o3spvyeq6r5oshe6dzh63yc88hs5ct8m2gixynrik46shp7r/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"></script>

<script>
  tinymce.init({
    selector: '#full-description',
    plugins: 'paste image link autolink lists table media',
    menubar: false,
    toolbar: [
      'undo redo | bold italic underline strikethrough | numlist bullist| alignleft aligncenter alignright |forecolor backcolor| table link image media'
    ]
  });
</script>