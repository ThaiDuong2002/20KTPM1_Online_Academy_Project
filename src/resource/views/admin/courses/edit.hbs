<div class="content-body">
  <!-- row -->
  <div class="container-fluid">

    <div class="row page-titles mx-0">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
          <h4>Edit Course</h4>
        </div>
      </div>
      <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active"><a href="javascript:void(0);">Courses</a></li>
          <li class="breadcrumb-item active"><a href="javascript:void(0);">Edit Course</a></li>
        </ol>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Courses Details</h4>
          </div>
          <div class="card-body">
            <form action="/admin/course/edit/{{course._id}}?_method=PUT" method="post">
              <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Course Name</label>
                    <input type="text" class="form-control" name="name" value="{{course.name}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Category</label>
                    <select id="mySelect" class="form-control" name="category">
                      <option value="HTML" {{#ifEquals course.category "HTML" }} selected {{/ifEquals}}>
                        HTML
                      </option>
                      <option value="CSS" {{#ifEquals course.category "CSS" }} selected {{/ifEquals}}>
                        CSS
                      </option>
                      <option value="JavaScript" {{#ifEquals course.category "JavaScript" }} selected {{/ifEquals}}>
                        JavaScript
                      </option>
                      <option value="Angular" {{#ifEquals course.category "Angular" }} selected {{/ifEquals}}>
                        Angular
                      </option>
                      <option value="React" {{#ifEquals course.category "React" }} selected {{/ifEquals}}>
                        React
                      </option>
                      <option value="Vue.js" {{#ifEquals course.category "Vue.js" }} selected {{/ifEquals}}>
                        Vue.js
                      </option>
                      <option value="Ruby" {{#ifEquals course.category "Ruby" }} selected {{/ifEquals}}>
                        Ruby
                      </option>
                      <option value="PHP" {{#ifEquals course.category "PHP" }} selected {{/ifEquals}}>
                        PHP
                      </option>
                      <option value="ASP.NET" {{#ifEquals course.category "ASP.NET" }} selected {{/ifEquals}}>
                        ASP.NET
                      </option>
                      <option value="Python" {{#ifEquals course.category "Python" }} selected {{/ifEquals}}>
                        Python
                      </option>
                      <option value="MySQL" {{#ifEquals course.category "MySQL" }} selected {{/ifEquals}}>
                        MySQL
                      </option>
                    </select>
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Short Description</label>
                    <textarea class="form-control" rows="5" name="shortDesc">{{course.shortDesc}}</textarea>
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Full Description</label>
                    <textarea class="form-control" rows="5" name="fullDesc">{{course.fullDesc}}</textarea>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Course Price</label>
                    <input type="text" class="form-control" name="price" value="{{course.price}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Lecturer Name</label>
                    <input type="text" class="form-control" name="lecturer" value="{{course.lecturer}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Overview</label>
                    <input type="text" class="form-control" name="overview" value="{{course.overview}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Basic Code</label>
                    <input type="text" class="form-control" name="basicCode" value="{{course.basicCode}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Advanced Code</label>
                    <input type="text" class="form-control" name="advancedCode" value="{{course.advancedCode}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Master Code</label>
                    <input type="text" class="form-control" name="masterCode" value="{{course.masterCode}}">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="form-group">
                    <label class="form-label">Discount</label>
                    <input type="text" class="form-control" name="discount" value="{{course.discount}}">
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="form-group fallback w-100">
                    <label class="form-label d-block">Course Image</label>
                    <input type="file" class="dropify" data-default-file="" name="image" accept="image/*">
                  </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <button type="submit" class="btn btn-primary">Save change</button>
                  <button type="submit" class="btn btn-light">Cancel</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>