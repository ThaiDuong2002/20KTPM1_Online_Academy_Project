<div class="content-body">
  <!-- row -->
  <div class="container-fluid">

    <div class="row page-titles mx-0 d-flex justify-content-between">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
          <h4>Course Details</h4>
        </div>
      </div>
      <a href="/admin/course/edit/{{course._id}}" class="btn btn-primary">
        <i class="fa fa-edit"></i>
        Edit Course
      </a>
    </div>

    <div class="row">
      <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <img class="img-fluid" src="{{course.image}}" alt="">
              <div class="card-body">
                <h4 class="mb-0">{{course.name}}</h4>
              </div>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <h2 class="card-title">About Course</h2>
              </div>
              <div class="card-body pb-0">
                <p>{{course.shortDesc}}</p>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong>Lecturer</strong>
                    <span class="mb-0">{{course.nameLecturer}}</span>
                  </li>
                  <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong>Price</strong>
                    <span class="mb-0">$ {{course.price}}</span>
                  </li>
                  <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong>Created Date</strong>
                    <span class="mb-0">{{course.createdAt}}</span>
                  </li>
                  <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong>Updated Date</strong>
                    <span class="mb-0">{{course.updatedAt}}</span>
                  </li>
                </ul>
              </div>
              <div class="card-footer pt-0 pb-0 text-center">
                <div class="row">
                  <div class="col-4 pt-3 pb-3 border-right">
                    <h3 class="mb-1 text-primary">240</h3>
                    <span>Students</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
          <div class="card-body">
            <h4 class="text-primary">Our Courses</h4>
            <div class="profile-skills pt-2 border-bottom-1 pb-2">
              <a href="javascript:void()" class="btn btn-outline-dark btn-rounded px-4 my-3 my-sm-0 mr-3 m-b-10">
                {{course.category}}
              </a>
            </div>
            <br>
            <h4 class="text-primary">Courses Information</h4>
            <ul class="list-group mb-3 list-group-flush">
              <li class="list-group-item border-0 px-0">{{course.fullDesc}}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>