<div class="content-body">
  {{#if error}}
    <div class="alert alert-danger" role="alert">
      <strong>Error: {{error}}</strong>
    </div>
  {{/if}}
  <div class="container-fluid">
    <div class="row page-titles mx-0 d-flex justify-content-between align-items-center">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
          <h4>Chapter List</h4>
        </div>
      </div>
      <a href="" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add Chapter
      </a>
    </div>

    <div class="row">
      <div class="col-xl-4 col-xxl-4 col-lg-4 col-md-6 col-sm-6">
        <div class="card">
          <div class="card-body">
            <h4>Chapter Title</h4>
            <div class="list-group mb-3 list-group-flush">
              <video width="100%" height="100%" controls>
                <source src="https://www.youtube.com/watch?v=58xKTGxmeHI" type="video/*">
              </video>
            </div>
            <div class="d-flex justify-content-between">
              <a href="" class="btn btn-primary">
                <i class="fa fa-edit" aria-hidden="true"></i>
                Edit
              </a>
              <a href="" class="btn btn-danger">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Delete
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</div>