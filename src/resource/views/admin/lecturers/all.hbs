<div class="content-body">
  <!-- row -->
  <div class="container-fluid">

    <div class="row page-titles mx-0 d-flex justify-content-between">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
          <h4>All Professors</h4>
        </div>
      </div>
      <a href="/admin/lecturer/add" class="btn btn-outline-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add new
      </a>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="row tab-content">
          <div id="list-view" class="tab-pane fade active show col-lg-12">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">All Professors</h4>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table id="example3" class="display" style="min-width: 845px">
                    <thead>
                      <tr>
                        <th></th>
                        <th>Username</th>
                        <th>Gender</th>
                        <th>Education</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each lecturers}}
                        <tr>
                          <td><img class="rounded-circle" width="35" src="{{this.image}}" alt=""></td>
                          <td>{{this.username}}</td>
                          <td>{{this.gender}}</td>
                          <td>{{this.education}}</td>
                          <td>{{this.phone}}</td>
                          <td>{{this.email}}</td>
                          <td>
                            <div>
                              <a href="/admin/lecturer/profile/{{this._id}}" class="btn btn-primary">
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                              </a>
                              <a href="/admin/lecturer/edit/{{this._id}}" class="btn btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                              </a>
                              <a href="" class="btn btn-danger" data-toggle="modal" data-id="{{this._id}}"
                                data-target="#delete-lecturer">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                              </a>
                            </div>
                          </td>
                        </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Confirm delete course --}}

<div class="modal" tabindex="-1" id="delete-lecturer">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Do you want to delete ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure want to detele this lecturer ?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-lecturer" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete Form --}}
<form name="delete-lecturer-form" method="post"></form>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    var lecturerId = 0;
    var deleteForm = document.forms['delete-lecturer-form'];
    var btnDeteleLecturer = document.getElementById('btn-delete-lecturer');

    $('#delete-lecturer').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      lecturerId = button.data('id');

    });

    btnDeteleLecturer.onclick = () => {
      deleteForm.action = '/admin/lecturer/' + lecturerId + '?_method=DELETE';
      deleteForm.submit();
    };
  });
</script>